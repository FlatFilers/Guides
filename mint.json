{
  "$schema": "https://mintlify.com/schema.json",
  "name": "flatfile.com",
  "logo": {
    "dark": "/logo/dark.svg",
    "light": "/logo/light.svg",
    "href": "https://flatfile.com"
  },
  "api": {
    "baseUrl": "https://platform.flatfile.com/api",
    "playground": {
      "mode": "simple"
    },
    "auth": {
        "method": "bearer"
    }
  },
  "favicon": "/favicon.jpg",
  "colors": {
    "primary": "#3B2FC9",
    "light": "#6673FF",
    "dark": "#3B2FC9",
    "background": {
      "dark": "#0f1117",
      "light": "#fff"
    }
  },
  "feedback": {
    "raiseIssue": true,
    "suggestEdit": true
  },
  "modeToggle": {
    "default": "dark"
  },
  "backgroundImage": "/images/background.png",
  "topbarLinks": [
    {
      "name": "Create account",
      "url": "https://platform.flatfile.com/account/sign-up"
    }
  ],
  "topbarCtaButton": {
    "name": "Sign in",
    "url": "https://platform.flatfile.com"
  },
  "versions": ["latest", "v3", "v2"],
  "anchors": [
    {
      "name": "Click here for V3 docs",
      "icon": "3",
      "url": "https://docs.flatfile.com/docs",
      "version": "v3"
    },
    {
      "name": "Click here for V2 docs",
      "icon": "2",
      "url": "https://docs.flatfile.com/docs/2.0/",
      "version": "v2"
    },
    {
      "name": "Blueprint",
      "icon": "compass-drafting",
      "url": "blueprint",
      "version": "latest"
    },
    {
      "name": "Plugins",
      "icon": "plug",
      "url": "https://flatfile.com/plugins",
      "version": "latest"
    },
    {
      "name": "Developers",
      "icon": "brackets-curly",
      "url": "developer-tools",
      "version": "latest"
    },
    {
      "name": "API Reference",
      "icon": "rectangle-terminal",
      "url": "https://flatfile.stoplight.io/docs/v10/",
      "version": "latest"
    }
  ],
  "navigation": [
    {
      "group": "Documentation",
      "pages": ["overview"],
      "version": "latest"
    },
    {
      "group": "Quickstart",
      "pages": ["quickstart/meet-the-workbook", "quickstart/add-data-transformation",
     "quickstart/submit-action", "quickstart/deploying"],
     "version": "latest"
    },
    {
      "group": "Guides", 
      "pages": ["guides/handling-data",  "guides/custom-actions",
          "guides/theming", "guides/guest_sidebar",  "guides/documents"],
      "version": "latest"
    },
    {
      "group": "Concepts",
      "pages": ["concepts/workbooks", "concepts/jobs", "concepts/events", "concepts/spaces"],
      "version": "latest"
    },
    {
      "group": "Core paths",
      "pages": ["core-paths/embedding", "core-paths/headless", "core-paths/collaborate"],
      "version": "latest"
    },
    {
      "group": "Blueprint",

      "pages": ["blueprint/overview", "blueprint/field-types",
          "blueprint/constraints",  "blueprint/relationships", "blueprint/access"],
      "version": "latest"
    },
    {
      "group": "Overview",
      "pages": ["developer-tools/environment", "developer-tools/deploying"],
      "version": "latest"
    },
    {
      "group": "Security",
      "pages": ["developer-tools/security/authentication",
          "developer-tools/security/roles-and-permissions"],
      "version": "latest"
    }
  ],
  "footerSocials": {
    "website": "https://flatfile.com",
    "github": "https://github.com/FlatFilers"
  },
  "analytics": {
    "gtm": {
        "tagId": "GTM-W673X2W"
    }
}
}
