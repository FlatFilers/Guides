{
  "$schema": "https://mintlify.com/schema.json",
  "name": "flatfile.com",
  "logo": {
    "dark": "/logo/dark.svg",
    "light": "/logo/light.svg",
    "href": "https://flatfile.com"
  },
  "api": {
    "baseUrl": "https://platform.flatfile.com/api",
    "playground": {
      "mode": "simple"
    },
    "auth": {
        "method": "bearer"
    }
  },
  "favicon": "/favicon.jpg",
  "colors": {
    "primary": "#3B2FC9",
    "light": "#6673FF",
    "dark": "#3B2FC9",
    "background": {
      "dark": "#0f1117",
      "light": "#fff"
    }
  },
  "feedback": {
    "raiseIssue": true,
    "suggestEdit": true
  },
  "modeToggle": {
    "default": "dark"
  },
  "backgroundImage": "/images/background.png",
  "topbarLinks": [
    {
      "name": "Create account",
      "url": "https://platform.flatfile.com/account/sign-up"
    }
  ],
  "topbarCtaButton": {
    "name": "Sign in",
    "url": "https://platform.flatfile.com"
  },

  "anchors": [
    {
      "name": "Blueprint",
      "icon": "compass-drafting",
      "url": "blueprint"
    },
    {
      "name": "Plugins",
      "icon": "plug",
      "url": "https://flatfile.com/plugins"
    },
    {
      "name": "Developer Tools",
      "icon": "brackets-curly",
      "url": "developer-tools"
    },
    {
      "name": "API Reference",
      "icon": "rectangle-terminal",
      "url": "https://flatfile.stoplight.io/docs/v10/"
    }
  ],
  "navigation": [
    {
      "group": "Documentation",
      "pages": ["overview"]
    },
    {
      "group": "Quickstart",
      "pages": ["quickstart/meet-the-workbook", "quickstart/add-data-transformation", 
     "quickstart/submit-action", "quickstart/deploying"]
    },
    {
      "group": "Getting Started",
      "pages": ["getting-started/handling-data",
          "getting-started/using-actions", "getting-started/embedding"]
    },
    {
      "group": "Concepts",
      "pages": ["concepts/workbooks", "concepts/jobs", "concepts/events", "concepts/spaces"]
    },
    {
      "group": "Security",
      "pages": ["security/authentication",
          "security/roles-and-permissions"]
    },
    {
      "group": "Advanced",
      "pages": ["advanced/theming", "advanced/guest_sidebar",  "advanced/documents", "advanced/custom-actions"]
    },
    {
      "group": "More scenarios",
      "pages": ["use-cases/headless", "use-cases/workflows",
          "use-cases/ephemeral"]
    },
    {
      "group": "Blueprint",

      "pages": ["blueprint/overview", "blueprint/field-types", 
          "blueprint/constraints",  "blueprint/relationships", "blueprint/access"]
    },
    {
      "group": "Developer Tools",
      "pages": ["developer-tools/overview", "developer-tools/deploying",
          "developer-tools/ci-integration", "developer-tools/environment"]
    },
    {
      "group": "Core Libraries",
      "pages": ["developer-tools/core-libraries/listener",
          "developer-tools/core-libraries/hooks", "developer-tools/core-libraries/api", "developer-tools/core-libraries/flatfile"]
    }
  ],
  "footerSocials": {
    "github": "https://github.com/FlatFilers",
    "twitter": "https://twitter.com/flatfilers/",
    "linkedin": "https://linkedin.com/company/flatfile",
    "facebook": "https://facebook.com/flatfilers/",
    "discord": "https://discord.gg/jbTtMKseas"
  },
  "analytics": {
    "gtm": {
        "tagId": "GTM-W673X2W"
    }
}
}
